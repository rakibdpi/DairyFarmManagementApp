@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <li class="dropdown user user-menu">

        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-user-circle-o fa-lg" aria-hidden="true"></i>
            <span class="hidden-xs">Hello @User.Identity.GetUserName() !</span>
        </a>
        <ul class="dropdown-menu">
            <li class="user-header">
                <i class="fa fa-user-circle-o fa-4x" aria-hidden="true"></i>
                @*<img src="~/Content/img/user.jpg" class="img-circle" alt="User Image">*@

                  <p>
                      @User.Identity.GetUserName()
                      <small>Welcome to ADRS</small>
                  </p>
            </li>
            <li class="user-body">
                @*<div class="row">
                <div class="col-xs-4 text-center">
                    <a href="#">Followers</a>
                </div>
                <div class="col-xs-4 text-center">
                    <a href="#">Sales</a>
                </div>
                <div class="col-xs-4 text-center">
                    <a href="#">Friends</a>
                </div>
            </div>*@
            </li>
            <li class="user-footer">
                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm"}))
                {
                    @Html.AntiForgeryToken()
                    <div class="pull-left">
                        <a href="@Url.Action("ChangePassword", "Manage")" class="btn btn-default btn-flat">Profile</a>
                    </div>
                    <div class="pull-right">
                        <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-default btn-flat">Sign out</a>
                    </div>
                }
            </li>
        </ul>

    </li>
}
