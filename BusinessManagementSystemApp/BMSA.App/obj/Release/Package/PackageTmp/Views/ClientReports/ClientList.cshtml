@model BusinessManagementSystemApp.Core.ViewModels.MilkMamagement.ClientInfoViewModels
@{
    ViewBag.Title = "ClientList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-10 col-md-offset-1">
    <div class="panel panel-info">
        <div class="panel-heading">Area Wise Client Lisr</div>
        <div class="panel-body">
            <div class="col-md-8 col-sm-8">
                <div class="form-group">
                    @Html.LabelFor(model => model.AreaId, "Area", htmlAttributes: new { @class = "control -label" })
                    @Html.DropDownListFor(c => c.AreaId, null, "", htmlAttributes: new { @class = "form-control input-sessionChange", @tabindex = "20" })
                    @Html.ValidationMessageFor(model => model.AreaId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label class="control-label">Customer Type</label>
                    <select class="form-control" id="CustomerType">
                        <option value="1">Active</option>
                        <option value="2">DeActive</option>
                        <option value="3">DeActive</option>
                    </select>
                </div>
                <div class="form-group">
                   <label class="control-label">Report Type</label>
                    <select class="form-control" id="AmountType">
                        <option value="pdf">Pdf</option>
                        <option value="word">Word</option>
                    </select>
                </div>
                <div class="form-group">
                    <input id="btnSubmit" type="button" value="Run Report" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</div>

<a id="pdf" class="hidden" runat="server">click me</a>
@section ViewSpecificJavascript
{
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.fancybox.js"></script>
    <script src="~/Scripts/MilkManagement/ClientInfos/clientReport.js"></script>
}

