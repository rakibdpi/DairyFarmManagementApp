@model BusinessManagementSystemApp.Core.ViewModels.MilkMamagement.SaleReportByDeliveryMenMasterViewModel
@{
    ViewBag.Title = "SalesReportDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="panel panel-info">
                <div class="panel-heading"><a class="panel-title" style="font-size: 20px">NORTH BENGAL DAIRY</a> <a href="@Url.Action("SalesReport")" class="btn btn-info btn-sm pull-right"><span class="glyphicon glyphicon-arrow-left"></span></a></div>
                <div class="panel-body">
                    <div class="row" style="padding-right: 50px">
                        <div class="col-md-12">
                            <div class="form-group form-horizontal">
                                <div class="form-group">
                                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2" style="width: 10%">
                                        <label class="control-label">Company:</label>
                                    </div>
                                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10" style="margin-top: 5px">
                                        @Html.DisplayFor(c => c.CompanyName)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group form-horizontal">
                                <div class="form-group">
                                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2" style="width: 10%">
                                        <label class="control-label">Phone:</label>
                                    </div>
                                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10" style="margin-top: 5px">
                                        @Html.DisplayFor(c => c.PhoneNo)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group form-horizontal">
                                <div class="form-group">
                                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2" style="width: 10%">
                                        <label class="control-label">Address:</label>
                                    </div>
                                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10" style="margin-top: 5px">
                                        @Html.DisplayFor(c => c.Address)
                                    </div>
                                </div>

                            </div>
                            <div class="form-group form-horizontal">
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">

                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                    <div class="form-group">
                                        <b style="font-size: 18px">Sale & Collection Report</b>

                                    </div>
                                </div>

                            </div>

                        </div>
                        <hr />
                        <br />
                        <br />
                    </div>
                    <div class="row">

                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <hr />
                            <div class="form-group">
                                @if (Model != null)
                                {
                                    <h4 style="font-size: 16px">Sale & Collection Report For @Model.Month , @Model.Year </h4>
                                }
                            </div>

                            <table id="list" class="table table-bordered table-striped" style="width: 100%; background: rgb(92, 72, 113); color: white">
                                <thead>
                                <tr>
                                    <th rowspan="2">Delivery Man</th>
                                    <th rowspan="2">Area</th>
                                    <th colspan="3">Sale Quantity</th>
                                    <th rowspan="2">Sale</th>
                                    <th rowspan="2">Collection</th>
                                </tr>
                                <tr>
                                    <th>500 GM</th>
                                    <th>750 GM</th>
                                    <th>1000 GM</th>
                                    
                                </tr>
                                </thead>
                                @if (Model != null && Model.Models.Count > 0)
                                {
                                    foreach (var dto in Model.Models)
                                    {
                                        <tbody style="color: black">
                                            <tr>
                                                <td table-row-group>@Html.DisplayFor(model => dto.DeliveryMan)</td>
                                                <td>@Html.DisplayFor(model => dto.AreaName)</td>
                                                <td>@Html.DisplayFor(model => dto.HalfKg)</td>
                                                <td>@Html.DisplayFor(model => dto.SevenHalf)</td>
                                                <td>@Html.DisplayFor(model => dto.OneKg)</td>
                                                <td>@Html.DisplayFor(model => dto.TotalSale)</td>
                                                <td>@Html.DisplayFor(model => dto.TotalCollection)</td>
                                            </tr>
                                        </tbody>
                                    }
                                }

                            </table>


                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


