@model BusinessManagementSystemApp.Core.Dtos.MilkPurchase.PurchaseReportDataSet
@{
    ViewBag.Title = "Purchase Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        @if (Model?.Models != null)
        {
            <div class="panel panel-info">
                <div class="panel-heading"><a class="panel-title" style="font-size: 20px">NORTH BENGAL DAIRY</a> <a href="@Url.Action("PurchaseReport")" class="btn btn-info btn-sm pull-right"><span class="glyphicon glyphicon-arrow-left"></span></a></div>
                <div class="panel-body">
                    <div class="row" style="padding-right: 50px">
                        <div class="col-md-12">
                            <div class="form-group form-horizontal">
                                <div class="form-group">
                                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2" style="width: 10%">
                                        <label class="control-label">Company:</label>
                                    </div>
                                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10" style="margin-top: 5px">
                                        @Html.DisplayFor(c => c.CompanyName)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group form-horizontal">
                                <div class="form-group">
                                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2" style="width: 10%">
                                        <label class="control-label">Phone:</label>
                                    </div>
                                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10" style="margin-top: 5px">
                                        @Html.DisplayFor(c => c.MobileNo)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group form-horizontal">
                                <div class="form-group">
                                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2" style="width: 10%">
                                        <label class="control-label">Address:</label>
                                    </div>
                                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10" style="margin-top: 5px">
                                        @Html.DisplayFor(c => c.CompanyAddress)
                                    </div>
                                </div>

                            </div>
                            <div class="form-group form-horizontal">
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">

                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                    <div class="form-group">
                                        <b style="font-size: 18px">PURCHASE REPORT</b>

                                    </div>
                                </div>

                            </div>

                        </div>
                        <hr />
                        <br />
                        <br />
                    </div>
                    <div class="row">

                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <hr />
                            <div class="form-group">
                                @if (Model.DayParameter != "0")
                                {
                                    <h4 style="font-size: 16px">Production Report For @Model.DayParameter, @Model.MonthParameter , @Model.YearParameter </h4>
                                }
                                else
                                {
                                    <h4 style="font-size: 16px">Production Report For @Model.MonthParameter , @Model.YearParameter </h4>
                                }
                            </div>

                            <table id="list" class="table table-bordered table-striped" style="width: 100%; background: rgb(92, 72, 113); color: white">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Supplier</th>
                                        <th>Quantity</th>
                                    </tr>
                                </thead>
                                @if (Model != null && Model.Models.Count > 0)
                                {
                                    foreach (var dto in Model.Models)
                                    {
                                        <tbody style="color: black">
                                            <tr>
                                                <td>@Html.DisplayFor(model => dto.Date)</td>
                                                <td>@Html.DisplayFor(model => dto.Supplier)</td>
                                                <td>@Html.DisplayFor(model => dto.Quantity)</td>
                                            </tr>
                                        </tbody>
                                    }
                                    <tfoot>
                                        <tr>
                                            <td></td>
                                            <td><strong>Total</strong></td>
                                            <td>@Model.Models.Sum(c => c.Quantity)</td>
                                            
                                        </tr>
                                    </tfoot>
                                }

                            </table>


                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


